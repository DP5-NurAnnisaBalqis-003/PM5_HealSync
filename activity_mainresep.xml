<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5C2C06"
    tools:context=".MainActivityResep">

    <!-- Scrollable Content Area -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:text="Almond Crispy"
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!-- Recipe Image -->
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:contentDescription="Almond Crispy Image"
                android:scaleType="centerCrop"
                android:src="@drawable/almond_image" />

            <!-- Ingredients -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="Bahan-bahan:\n- 60 gram terigu Kunci Biru\n- 30 gram mentega\n- 40 gram gula halus\n- 1 butir putih telur atau 40 gram\n- 40 gram kacang almond slice\n- 30 gram keju parut\n- 1/2 sdt baking powder\n- Garam secukupnya"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Instructions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Langkah-langkah:\n1. Kocok putih telur hingga berbusa, tambahkan gula.\n2. Campur bahan kering ke adonan telur.\n3. Tuang margarin leleh, aduk rata.\n4. Tambahkan almond.\n5. Cetak tipis di atas loyang, panggang 160Â°C.\n6. Dinginkan dan simpan."
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Tutorial Link -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:autoLink="web"
                android:text="Link Tutorial\nhttps://youtu.be/SxXrHWwcKFQ"
                android:textColor="#0000EE"
                android:textSize="16sp" />

            <!-- Ulasan Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ulasan"
                android:textColor="#000000"
                android:textSize="20sp" />

            <!-- Ulasan Edit Text -->
            <EditText
                android:id="@+id/etUlasan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Masukkan ulasan"
                android:padding="12dp" />

            <!-- Rating Bar -->

            <!-- Submit Button -->
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:numStars="5"
                android:stepSize="1.0"
            android:isIndicator="false"
            android:rating="4.5" />


            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Submit" />

            <!-- Displayed Rating -->

            <!-- Displayed Rating Stars -->

        </LinearLayout>
    </ScrollView>

    <!-- Footer with Icons -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#5C2C06"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
