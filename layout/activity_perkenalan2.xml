<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown"
    tools:context=".Perkenalan2">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="313dp"
        android:layout_height="662dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cake Mate"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/jacquesfrancois_regular"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Ciptakan Kue Lezat, Bagikan Kreasimu"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:fontFamily="@font/jacquesfrancois_regular"/>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="98dp"
            android:layout_height="94dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/icon_cakemate" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="Selamat datang di Cake Mate, aplikasi resep yang menyajikan resep cookies yang lezat. Dengan Cake Mate, Anda akan menemukan berbagai resep cookies yang praktis, mulai dari yang klasik hingga kreasi unik yang dapat memanjakan lidah. Mari ciptakan kue favorit Anda dengan Cake Mateâ€”teman setia Anda di dapur!"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:fontFamily="@font/jacquesfrancois_regular"/>

        <Button
            android:id="@+id/btnMulai"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/brown"
            android:text="Mulai"
            android:textColor="@android:color/white"
            android:fontFamily="@font/jacquesfrancois_regular"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
