<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown"
    tools:context=".Perkenalan1">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="313dp"
        android:layout_height="662dp"
        android:layout_margin="50dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.8">

        <TextView
            android:id="@+id/title"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Cake Mate"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="@font/jacquesfrancois_regular"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Ciptakan Kue Lezat, Bagikan Kreasimu"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:fontFamily="@font/jacquesfrancois_regular"/>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="193dp"
            android:layout_height="183dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_cakemate" />

        <Button
            android:id="@+id/btnMulai"
            android:layout_width="169dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/brown"
            android:text="Mulai"
            android:textColor="@android:color/white"
            android:fontFamily="@font/jacquesfrancois_regular"/>

        <Button
            android:id="@+id/btnSelanjutnya"
            android:layout_width="169dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/brown"
            android:text="Selanjutnya"
            android:textColor="@android:color/white"
            android:fontFamily="@font/jacquesfrancois_regular"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
